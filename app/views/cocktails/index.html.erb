
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1514933651103-005eec06c04b?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=2534&q=80);">
  <div class="container flex-direction: row ">
    <h1>Moe's Tavern brings <strong>amazing drinks</strong> to <strong>thirsty people</strong>!</h1>
    <p>Change your life and learn to drink.</p>
    <a class="btn btn-flat" href="#">Apply now</a>
  </div>
</div>
<br>
<div class="d-flex justify-content-center mb-5">
<%= link_to 'Add a new cocktail', new_cocktail_path, class: 'btn btn-primary'%>
</div>

  <div class="container cards_grid mt-5">
    <div class="cards mb-5">
      <% @cocktails.each do |coc| %>
        <%= link_to cocktail_path(coc) do %>
        <% if coc.photo.attached? %>
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path coc.photo.key, height: 300, width: 400, crop: :fill %>')">
          <%= coc.name %>
          </div>
        <% else  %>
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('https://images.unsplash.com/photo-1470337458703-46ad1756a187?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=749&q=80')">
          <%= coc.name %>
          </div>
        <% end  %>
        <% end %>
      <% end %>
    </div>
  </div>


